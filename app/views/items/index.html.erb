<div class='container-fluid'>
<div class='row'>
<div class='col-2'>
  
<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
  
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

投稿フォーム
  <%= form_with model: @item do |f| %>

    <div class="field">
      <%= f.label :画像 %><br/>
      <%= f.file_field :image, accept: "image/*" %>
    </div>
    </br>

    <div class="field">
      <%= f.label :道具名 %><br/>
      <%= f.text_field :item_name %>
    </div>

    </br>
    <%= f.submit "保存" %>

  <% end %>
</div>



<div class='col-10'>
  <h4>マイギア</h4>
  <div class='row'>
    
  <% @items.each do |item| %>
    <div class="col-md-2">
   <% if item.image.attached? %>
      <%= image_tag item.image, size: "200x200" %>
    <% else %>
      <%= image_tag 'leavelogo', size: "200x200" %>
    <% end %>
    </br>
    <%= link_to item.item_name, item_path(item.id) %>
    </div>
    </br></br>
    
  <% end %>

</div>
</div>
</div>
</div>

