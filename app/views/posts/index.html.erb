<div class='container-fluid'>
<div class='row'>
<div class='col'>

  キャンプ場検索
  <%= form_with url: posts_path, method: :get, local: true do |f| %>
    <%= f.text_field :place %>
    <%= f.submit :検索 %>
  <% end %></br>

  <h2><i class="fas fa-campground"></i>みんなのキャンプ記録</h2>

  <div class='row'>

  <% @posts.each do |post| %>
    <div class="col-md-2">
    <% if post.images.attached? %>
    　<!--↓.firstと付けることで複数の写真の中の一番最初の写真を表示-->
      <%= image_tag post.images.first, size: "200x200" %>
      <!--↓写真全部表示用の記述ループさせる-->
      <%# post.images.each do |image| %>
        <%#= image_tag image, size: "200x200" %>
      <%# end %>
    <% else %>
      <%= image_tag 'leavelogo', size: "200x200" %>
    <% end %>



    </br>
    <%= link_to post.place, post_path(post.id)%></br></br>
    </div>
  <% end %>

</div>
</div>
</div>
</div>
